<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="false"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="sans-serif-black"
        android:gravity="end"
        android:marqueeRepeatLimit="marquee_forever"
        android:textAlignment="viewEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="38sp"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/plusSign"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:background="#D50000"
        android:text="+"
        android:textColor="#F1EDED"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/perSign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/num3" />

    <Button
        android:id="@+id/multiplySign"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:background="#D50000"
        android:text="X"
        android:textColor="#F1EDED"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/minusSign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/num9" />

    <Button
        android:id="@+id/deleteSign"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:background="#D50000"
        android:text="Del"
        android:textColor="#F1EDED"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/num8"
        app:layout_constraintEnd_toStartOf="@+id/equalSign"
        app:layout_constraintStart_toEndOf="@+id/clearSign" />

    <Button
        android:id="@+id/minusSign"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:background="#D50000"
        android:text="-"
        android:textColor="#F1EDED"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/plusSign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/num6" />

    <Button
        android:id="@+id/divideSign"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:background="#D50000"
        android:text="/"
        android:textColor="#F1EDED"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/multiplySign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/equalSign" />

    <Button
        android:id="@+id/equalSign"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:background="#FF6D00"
        android:text="="
        android:textColor="#F1EDED"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/num9"
        app:layout_constraintEnd_toStartOf="@+id/divideSign"
        app:layout_constraintStart_toEndOf="@+id/deleteSign" />

    <Button
        android:id="@+id/perSign"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="#D50000"
        android:text="%"
        android:textColor="#F1EDED"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dotSign" />

    <Button
        android:id="@+id/num8"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:background="#E6E3E3"
        android:text="8"
        android:textColor="#0E0E0E"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/num5"
        app:layout_constraintEnd_toStartOf="@+id/num9"
        app:layout_constraintStart_toEndOf="@+id/num7" />

    <Button
        android:id="@+id/num7"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:background="#E6E3E3"
        android:text="7"
        android:textColor="#0E0E0E"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/num4"
        app:layout_constraintEnd_toStartOf="@+id/num8"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/num5"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:background="#E6E3E3"
        android:text="5"
        android:textColor="#0E0E0E"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/num2"
        app:layout_constraintEnd_toStartOf="@+id/num6"
        app:layout_constraintStart_toEndOf="@+id/num4" />

    <Button
        android:id="@+id/num4"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:background="#E6E3E3"
        android:text="4"
        android:textColor="#0E0E0E"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/num1"
        app:layout_constraintEnd_toStartOf="@+id/num5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/num9"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:background="#E6E3E3"
        android:text="9"
        android:textColor="#0E0E0E"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/num6"
        app:layout_constraintEnd_toStartOf="@+id/multiplySign"
        app:layout_constraintStart_toEndOf="@+id/num8" />

    <Button
        android:id="@+id/clearSign"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:background="#D50000"
        android:backgroundTint="#D50000"
        android:fadeScrollbars="false"
        android:text="C"
        android:textAllCaps="false"
        android:textColor="#F1EDED"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/num7"
        app:layout_constraintEnd_toStartOf="@+id/deleteSign"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/num3"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:background="#E6E3E3"
        android:text="3"
        android:textColor="#0E0E0E"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/dotSign"
        app:layout_constraintEnd_toStartOf="@+id/plusSign"
        app:layout_constraintStart_toEndOf="@+id/num2" />

    <Button
        android:id="@+id/num2"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:background="#E6E3E3"
        android:text="2"
        android:textColor="#0E0E0E"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/num0"
        app:layout_constraintEnd_toStartOf="@+id/num3"
        app:layout_constraintStart_toEndOf="@+id/num1" />

    <Button
        android:id="@+id/num6"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:background="#E6E3E3"
        android:text="6"
        android:textColor="#0E0E0E"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/num3"
        app:layout_constraintEnd_toStartOf="@+id/minusSign"
        app:layout_constraintStart_toEndOf="@+id/num5" />

    <Button
        android:id="@+id/num0"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:background="#E6E3E3"
        android:text="0"
        android:textColor="#0E0E0E"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dotSign"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/num1"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="100dp"
        android:background="#E6E3E3"
        android:text="1"
        android:textColor="#0E0E0E"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/num2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/dotSign"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:background="#D50000"
        android:text="."
        android:textColor="#F1EDED"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/perSign"
        app:layout_constraintStart_toEndOf="@+id/num0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:digits="true"
        android:fontFamily="sans-serif-black"
        android:foregroundGravity="right"
        android:gravity="bottom|center"
        android:inputType="number|numberDecimal"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="43sp"
        android:typeface="normal"
        app:autoSizeTextType="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>